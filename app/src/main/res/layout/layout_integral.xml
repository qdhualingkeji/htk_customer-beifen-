<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:showDividers="middle"
    android:divider="@drawable/shape_line_vertical">

    <LinearLayout
        android:id="@+id/ll_mine_coupon"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_mine_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_orange_dark"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorBlack"
            android:text="优惠券"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_integral"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_mine_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_orange_dark"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorBlack"
            android:text="积分"/>

    </LinearLayout>

</LinearLayout>