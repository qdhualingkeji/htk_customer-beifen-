<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">





    <TextView
        android:layout_centerVertical="true"
        android:text=""
        android:id="@+id/commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black_light" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/choiceLayout"
        android:layout_toRightOf="@+id/commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:gravity="center|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/benefit_style" />

        <TextView
            android:id="@+id/commodityPrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/benefit_style" />

        <TextView
            android:id="@+id/commodityNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="件"
            android:textColor="@color/black_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/choiceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:background="@mipmap/shopping_choice"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reduce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="—"
            android:textColor="@color/black_light" />

        <TextView
            android:id="@+id/shoppingNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:maxLength="10"
            android:textColor="@color/black_light"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/increase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black_light" />

    </LinearLayout>

</RelativeLayout>