<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/include_title"
        layout="@layout/include_title" />


    <LinearLayout
        android:id="@+id/ll_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_title"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/user" />


        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/nulls"
            android:hint="@string/hint_phoneNumber"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_getAuthCode"
            style="@style/white14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_btn"
            android:padding="8dp"
            android:text="@string/authCode" />


    </LinearLayout>


    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_phoneNumber"
        android:layout_marginLeft="15dp"
        android:background="@color/colorGrayLine" />


    <LinearLayout
        android:id="@+id/ll_authCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line1"
        android:orientation="horizontal">


        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/yanzhengma"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/et_authCode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/nulls"
            android:hint="@string/hint_authCode"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="14dp" />

    </LinearLayout>


    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_authCode"
        android:layout_marginLeft="15dp"
        android:background="@color/colorGrayLine" />


    <LinearLayout
        android:id="@+id/ll_passWord1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/lock"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/et_passWord1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/view_line2"
            android:background="@drawable/nulls"
            android:hint="@string/hint_settingpassWord"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="14dp" />


    </LinearLayout>

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_passWord1"
        android:layout_marginLeft="15dp"
        android:background="@color/colorGrayLine" />

    <LinearLayout
        android:id="@+id/ll_passWord2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line3"
        android:orientation="horizontal">


        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/lock"
            android:gravity="center_vertical" />


        <EditText
            android:id="@+id/et_passWord2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/view_line3"
            android:background="@drawable/nulls"
            android:hint="@string/hint_settingpassWord_again"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="14dp" />

    </LinearLayout>


    <View
        android:id="@+id/view_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_passWord2"
        android:layout_marginLeft="15dp"
        android:background="@color/colorGrayLine" />


    <TextView
        android:id="@+id/tv_mark"
        style="@style/blank14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line4"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/mark_login"
        android:visibility="gone" />


    <Button
        android:id="@+id/btn_register"
        style="@style/white16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mark"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn"
        android:padding="10dp"
        android:text="@string/register" />


</RelativeLayout>