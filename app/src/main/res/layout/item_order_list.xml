<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/item_order_number"
            android:text="@string/join_order_type"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorTvHint"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_order_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/item_order_title"
                android:layout_toRightOf="@+id/item_order_icon"
                android:layout_marginLeft="10dp"
                android:text="title"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:drawableRight="@mipmap/u_06"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_order_time"
                android:layout_below="@+id/item_order_title"
                android:layout_toRightOf="@+id/item_order_icon"
                android:layout_marginLeft="10dp"
                android:text="time"
                android:textSize="12sp"
                android:textColor="@color/colorTvHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_order_state"
                android:layout_alignParentRight="true"
                android:text="订单状态"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!--<View-->
            <!--android:layout_marginLeft="50dp"-->
            <!--android:background="@color/colorTvHint"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height=".3dp"/>-->

        <LinearLayout
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_order_details"
                android:paddingLeft="50dp"
                android:textColor="@color/colorGrayText"
                android:text="@string/join_order_detail"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_order_money"
                android:text="@string/join_order_money"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/item_order_come_again"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/blue_slide"
            android:text="再来一单"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</android.support.v7.widget.CardView>