<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/tc_img"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tcimg"/>
            <TextView
                android:id="@+id/tc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红烧肘子"
                android:layout_alignTop="@+id/tc_img"
                android:layout_toRightOf="@+id/tc_img"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_alignTop="@+id/tc_img"
                android:layout_toRightOf="@+id/tc_name"
                android:layout_marginLeft="80dp"/>
            <TextView
                android:id="@+id/tc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="168元"
                android:layout_alignTop="@+id/tc_img"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="#f3504b"/>
        </RelativeLayout>
</LinearLayout>
