<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_tg_order_icon"
        android:layout_width="100dp"
        android:layout_height="80dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:placeholderImage="@mipmap/head_default"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="false" />

    <TextView
        android:id="@+id/tv_tg_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="舌尖上的美女"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        fresco:layout_constraintLeft_toRightOf="@+id/iv_tg_order_icon"
        fresco:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tg_order_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/jt_right"
        android:singleLine="true"
        android:text="咬掉舌头不奇怪"
        android:textColor="@color/colorTvHint"
        android:textSize="@dimen/sp_14"
        fresco:layout_constraintLeft_toRightOf="@+id/iv_tg_order_icon"
        fresco:layout_constraintTop_toBottomOf="@+id/tv_tg_order_title" />

    <TextView
        android:id="@+id/tv_tg_order_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="￥86"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_16"
        fresco:layout_constraintLeft_toRightOf="@+id/iv_tg_order_icon"
        fresco:layout_constraintTop_toBottomOf="@+id/tv_tg_order_content" />

    <TextView
        android:id="@+id/tv_tg_order_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:text="￥86"
        android:textColor="@color/colorTvHint"
        android:textSize="@dimen/sp_14"
        fresco:layout_constraintBottom_toBottomOf="@+id/tv_tg_order_current_price"
        fresco:layout_constraintLeft_toRightOf="@+id/tv_tg_order_current_price"
        fresco:layout_constraintTop_toBottomOf="@+id/tv_tg_order_content" />

</android.support.constraint.ConstraintLayout>