<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    app:contentPadding="@dimen/dp_15"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_member_platform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorBlack" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_member_platform_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTvHint"
            android:textSize="@dimen/sp_12"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_member_platform_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="2"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_member_platform_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTvHint"
            android:textSize="@dimen/sp_12"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorBlack"
            android:text="查看全文"/>

    </LinearLayout>

</android.support.v7.widget.CardView>