<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include  layout="@layout/common_head_layout"
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aaa"
        android:layout_above="@+id/bbbb">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_zhutu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/lvdatu"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蟹黄芝士面包"
                    android:textColor="#333"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/img_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_heart_grey"
                    android:layout_toLeftOf="@+id/shoucang"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/zonghepingfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合评分："
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/zonghepingfen"
                    android:layout_below="@+id/tv_title">
                    <ImageView
                        android:id="@+id/xingxinga"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/huixing"
                        android:layout_margin="2dp"/>
                    <ImageView
                        android:id="@+id/xingxingb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/huixing"
                        android:layout_margin="2dp"/>
                    <ImageView
                        android:id="@+id/xingxingc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/huixing"
                        android:layout_margin="2dp"/>
                    <ImageView
                        android:id="@+id/xingxingd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/huixing"
                        android:layout_margin="2dp"/>
                    <ImageView
                        android:id="@+id/xingxinge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/huixing"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:id="@+id/tv_yuexiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=""
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_below="@+id/zonghepingfen"
                    android:textColor="#f3504b"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/jiahao"
                    android:layout_below="@+id/zonghepingfen"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zonghepingfen"
                    android:layout_toLeftOf="@+id/img_add"
                    android:inputType="number"
                    android:text="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#333"/>
                <ImageView
                    android:id="@+id/img_jian"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/jianhao"
                    android:layout_below="@+id/zonghepingfen"
                    android:layout_toLeftOf="@+id/tv_sum"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/linear_tc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFDFE3E4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="套餐列表"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <com.hl.htk_customer.hldc.view.MyListview
                    android:id="@+id/spxq_listview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </com.hl.htk_customer.hldc.view.MyListview>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFC1BDBD" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/taocanprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="套餐价:288"
                        android:textColor="#f3504b"
                        android:layout_margin="5dp"
                        android:layout_centerInParent="true"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/zongjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总价:330"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFDFE3E4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品简介"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                    <TextView
                        android:id="@+id/tv_jianjie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFDFE3E4">
                    <TextView
                        android:id="@+id/tv_pinglunshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <com.hl.htk_customer.hldc.view.MyListview
                    android:id="@+id/spxq_pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </com.hl.htk_customer.hldc.view.MyListview>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <include  layout="@layout/common_bottom_layout"
              android:layout_height="50dp"
              android:layout_width="match_parent"
              android:layout_alignParentBottom="true"
              android:id="@+id/bbbb"/>
</RelativeLayout>
