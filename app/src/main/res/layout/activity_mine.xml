<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:divider="@drawable/shape_line">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

        <include layout="@layout/layout_mine_head"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/layout_integral"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />
    
    <TextView
        android:id="@+id/tv_mine_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/u_06"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:text="我的预约"/>

    <TextView
        android:id="@+id/tv_mine_transaction_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/u_06"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:text="交易记录"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_mine_redeem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/u_06"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:text="积分兑换"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_mine_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/u_06"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:text="关于"/>

    <TextView
        android:id="@+id/tv_mine_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/u_06"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:text="建议评价"/>

</LinearLayout>