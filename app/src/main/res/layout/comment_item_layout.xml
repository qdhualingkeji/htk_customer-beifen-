<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/xingxinga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/huixing"
            android:layout_margin="2dp"/>
        <ImageView
            android:id="@+id/xingxingb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/huixing"
            android:layout_margin="2dp"/>
        <ImageView
            android:id="@+id/xingxingc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/huixing"
            android:layout_margin="2dp"/>
        <ImageView
            android:id="@+id/xingxingd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/huixing"
            android:layout_margin="2dp"/>
        <ImageView
            android:id="@+id/xingxinge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/huixing"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="会员"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="2017-11-07"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_commentcontent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="评论内容如下"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>