<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/text_gray3_color"
    android:layout_width="match_parent" android:layout_height="50dp">
    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/foot_cur_29"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_number"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:gravity="center"
        android:background="@drawable/bg_circle_red"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <View
        android:id="@+id/view_vs"
        android:layout_toRightOf="@id/tv_number"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/icon_horizontal_seperateline"
        android:layout_width="2dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/linear_money"
        android:layout_toRightOf="@id/view_vs"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="已点"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_moneytip"
            android:text="0元"
            android:textSize="14sp"
            android:textColor="@color/red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_bottompay"
        android:background="@color/red_light"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_40"
        android:text="@string/comfirmorder_state"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</RelativeLayout>