<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_common_bg"
    android:theme="@style/MyAppTheme"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/headview"
        layout="@layout/common_head_layout"
        android:layout_height="50dp"
        android:layout_width="match_parent"/>
    <View
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rel_info"
        android:background="@color/color_zhusediao"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/img_headicon"
            android:background="@drawable/icon_head"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageView
            android:id="@+id/img_arrow"
            android:background="@drawable/icon_rightarrowwhite"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nickname"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="会员昵称"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/img_headicon"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phonenumber"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="13589238439"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/tv_nickname"
            android:layout_below="@id/tv_nickname"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/color_white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_couponnumber"
                android:textSize="16sp"
                android:text="3个"
                android:gravity="center"
                android:textColor="@color/red_light"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14sp"
                android:text="优惠券"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@drawable/icon_horizontal_seperateline"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_jifennumber"
                android:textSize="16sp"
                android:text="300"
                android:gravity="center"
                android:textColor="@color/red_light"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14sp"
                android:text="积分"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <View
            android:id="@+id/view_sp"
            android:background="@color/color_white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <ImageView
            android:id="@+id/img_favoriteicon"
            android:background="@drawable/icon_heart"
            android:layout_above="@id/view_sp"
            android:layout_alignLeft="@id/view_sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/myfavorite"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_above="@id/view_sp"
            android:layout_toRightOf="@id/img_favoriteicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_gotomyfavorite"
            android:background="@drawable/icon_rightarrowblack"
            android:layout_marginBottom="8dp"
            android:layout_above="@id/view_sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_jifenduihuanicon"
            android:background="@drawable/icon_wallet"
            android:layout_below="@id/view_sp"
            android:layout_alignLeft="@id/view_sp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/jifenduihuan"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/view_sp"
            android:layout_toRightOf="@id/img_jifenduihuanicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_gotojifenduihuan"
            android:background="@drawable/icon_rightarrowblack"
            android:layout_marginTop="8dp"
            android:layout_below="@id/view_sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:id="@+id/img_beizhuicon"
            android:background="@drawable/icon_redpencil"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_beizhu11"
            android:text="@string/beizhu_state"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_beizhuicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_gotobeizhu"
            android:background="@drawable/icon_rightarrowblack"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_beizhu1"
            android:text="微辣"
            android:textColor="@color/color_000000"
            android:textSize="14sp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/tv_beizhu11"
            android:layout_width="120dp"
            android:maxWidth="120dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <View
            android:id="@+id/view_sp2"
            android:background="@color/color_white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp" />
        <ImageView
            android:id="@+id/img_abouticon"
            android:background="@drawable/icon_redtanhao"
            android:layout_above="@id/view_sp2"
            android:layout_alignLeft="@id/view_sp2"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/about"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_above="@id/view_sp2"
            android:layout_toRightOf="@id/img_abouticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_gotoabout"
            android:background="@drawable/icon_rightarrowblack"
            android:layout_marginBottom="8dp"
            android:layout_above="@id/view_sp2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_jianyiicon"
            android:background="@drawable/icon_redpen"
            android:layout_below="@id/view_sp2"
            android:layout_alignLeft="@id/view_sp2"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/advise"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/view_sp2"
            android:layout_toRightOf="@id/img_jianyiicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_gotojianyi"
            android:background="@drawable/icon_rightarrowblack"
            android:layout_marginTop="8dp"
            android:layout_below="@id/view_sp2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>