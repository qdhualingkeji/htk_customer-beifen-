<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="23dip"
        android:background="@color/colorWhite" />
    <RelativeLayout
        android:id="@+id/rl_zpxz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view1"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/ivFunction"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@mipmap/black_jt" />

        <TextView
            android:textSize="18dp"
            android:textColor="@color/colorGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择图片" />

        <TextView

            android:id="@+id/tvFunction"
            android:textSize="14dp"
            android:textColor="@color/colorGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:text="取消" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/image_grid_zpxz"
        android:background="#181819"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rl_zpxz"
        android:layout_toRightOf="@+id/ll_zp"
        android:layout_toEndOf="@+id/ll_zp" />

  <LinearLayout
        android:id="@+id/ll_zp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="#EAC95E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvselectNum_zpxz"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="0 / 3" />

        <TextView
            android:id="@+id/tvZhengMian_zpxz"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="正面" />

        <TextView
            android:id="@+id/tvCeMian_zpxz"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="侧面" />

        <TextView
            android:id="@+id/tvBeiMian_zpxz"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="背面" />

        <TextView
            android:id="@+id/tvnext_zpxz"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="下一步" />
    </LinearLayout>

</RelativeLayout>
