<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/linear_head"
        android:orientation="vertical" android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:background="@color/title_bar_line_color"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_grouphead"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:text="Null"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:background="@color/color_white" android:paddingLeft="25dp"
        android:paddingTop="5dp" android:paddingBottom="5dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_foodicon"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/tv_foodname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_foodicon"
            android:text="Null"
            android:textSize="16sp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_foodprice"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/tv_foodname"
            android:layout_below="@id/tv_foodname"
            android:text="-1元"
            android:textSize="14sp"
            android:textColor="@color/red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_plus"
            android:background="@drawable/jiahao"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen_59"
            android:layout_height="@dimen/dimen_59" />
        <TextView
            android:id="@+id/tv_number1"
            android:text="1"
            android:layout_toLeftOf="@id/tv_plus"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/title_bar_line_color"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_59" />
        <TextView
            android:id="@+id/tv_reduce"
            android:background="@drawable/jianhao"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_number1"
            android:layout_width="@dimen/dimen_59"
            android:layout_height="@dimen/dimen_59" />

        <TextView
            android:id="@+id/tv_delete"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/tv_reduce"
            android:layout_alignParentRight="true"
            android:text="移除"
            android:textColor="@color/color_white"
            android:background="@color/allText_red_color"
            />

    </RelativeLayout>
</LinearLayout>