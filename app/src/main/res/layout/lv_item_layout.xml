<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/lv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/lv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/img_shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_heart_grey"
                android:layout_toLeftOf="@+id/shoucang"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/zonghepingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评分："
                android:layout_below="@+id/lv_item_title"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/zonghepingfen"
                android:layout_below="@+id/lv_item_title">
                <ImageView
                    android:id="@+id/xingxinga"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/huixing"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:id="@+id/xingxingb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/huixing"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:id="@+id/xingxingc"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/huixing"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:id="@+id/xingxingd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/huixing"
                    android:layout_margin="2dp"/>
                <ImageView
                    android:id="@+id/xingxinge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/huixing"
                    android:layout_margin="2dp"/>
                <TextView
                    android:id="@+id/tv_yuexiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_below="@+id/zonghepingfen"
                android:textColor="#f3504b"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/jiahao"
                android:layout_below="@+id/zonghepingfen"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
